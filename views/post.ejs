<%- include("partials/header.ejs")%>


<div class="container card shadow-sm">

<div class="card-body">
<form action="/" method="POST">

  <div class="form-group m-4">
    <label for="title-input" class='mb-2'>Title</label>
    <input type="text" id="title-input" name="title" class="form-control" required>
  </div>
  
  <div class="form-group m-4">
    <label for="blog-text" class='mb-2'>Blog Box</label>
    <textarea type="text" class="form-control" id="blog-text" name="textarea" rows="20" required> </textarea>
  </div>

  <div class="container text-center">
  <button type='submit' class='btn btn-primary'>Save</button>
  <a href="/" class='btn btn-secondary'>Cancel</a>

  </div>
</form>
</div>

</div>